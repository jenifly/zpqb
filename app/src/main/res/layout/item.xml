<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frag_imformation_menull"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/frag_imformation_carousel"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_001" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/infomation_zjgonggaolan"
            style="@style/menu_main_item">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="11dp"
                android:src="@mipmap/icon_notice"
                android:tint="?attr/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="3dp"
                android:text="株机公告栏"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/infomation_zjgushi"
            style="@style/menu_main_item">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:src="@mipmap/icon_luntan"
                android:tint="?attr/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="3dp"
                android:text="株机故事"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            style="@style/menu_main_item">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:src="@mipmap/icon_dangwu"
                android:tint="?attr/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="3dp"
                android:text="党务公开"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            style="@style/menu_main_item">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:src="@mipmap/icon_xingji"
                android:tint="?attr/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="3dp"
                android:text="星级评定"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/menu_main_item">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:src="@mipmap/icon_jiangzhang"
                android:tint="?attr/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="6dp"
                android:text="奖章查询"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            style="@style/menu_main_item">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:src="@mipmap/icon_fengcai"
                android:tint="?attr/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="6dp"
                android:text="株机风采"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            style="@style/menu_main_item">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:src="@mipmap/icon_duanqing"
                android:tint="?attr/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="6dp"
                android:text="段情民意"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            style="@style/menu_main_item">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:src="@mipmap/icon_others"
                android:tint="?attr/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="6dp"
                android:text="其他"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>