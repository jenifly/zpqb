<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:elevation="2px">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:text="测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="4dp"
       android:layout_marginRight="4dp"
       android:padding="6dp"
       android:gravity="center_horizontal"
       android:orientation="horizontal">
       <ImageView
           android:layout_width="120dp"
           android:layout_height="80dp"
           android:src="@mipmap/icon_head"
           android:scaleType="centerCrop"
           android:elevation="1dp"/>
       <ImageView
           android:layout_marginLeft="3dp"
           android:layout_width="120dp"
           android:layout_height="80dp"
           android:src="@mipmap/icon_head"
           android:scaleType="centerCrop"
           android:elevation="1dp"/>
       <ImageView
           android:layout_marginLeft="3dp"
           android:layout_width="120dp"
           android:layout_height="80dp"
           android:src="@mipmap/icon_head"
           android:scaleType="centerCrop"
           android:elevation="1dp"/>
   </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/hintTextColor"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/liulan"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="浏览：666"/>
        <TextView
            android:id="@+id/pinglun"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/liulan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="评论：666"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="发布时间：2017.08.31  23:24"/>
    </RelativeLayout>
</LinearLayout>