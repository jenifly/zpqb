<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:elevation="0dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:expandedTitleGravity="center"
            app:collapsedTitleGravity="center"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_head"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.6"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3222" />

            <RelativeLayout
                android:id="@+id/fragment_mine_topview"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.6">

                <LinearLayout
                    android:paddingTop="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/mine_ic_head"
                            android:layout_width="60dp"
                            android:layout_height="56dp"
                            android:layout_marginLeft="30dp"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="李四三"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textSize="18dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="26岁"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textSize="14dp"/>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_centerInParent="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="26dp"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@mipmap/icon_left"
                                android:tint="@color/white"
                                android:rotation="180"/>
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:text="株洲运用车间"/>
                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/white"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text="电力机车副司机"/>
                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/white"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text="XXXXXX"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/fragment_mine_titel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                app:layout_collapseMode="pin"
                app:contentInsetStart="0dp"
                app:contentInsetEnd="0dp" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/bg_main">

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/testss"
                android:background="@drawable/btn_selected"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:padding="12dp"
                    android:src="@mipmap/icon_info"
                    android:tint="?attr/colorPrimary" />
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通知"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textSize="16dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="32dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text="3"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_cricle"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/solarTextColor"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="辅助功能"/>
                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        android:layout_width="1dp"
                        android:layout_height="80dp"
                        android:src="@mipmap/icon_003"/>
                    <ImageView
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        android:layout_width="1dp"
                        android:layout_height="80dp"
                        android:src="@mipmap/icon_007"/>
                    <ImageView
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        android:layout_width="1dp"
                        android:layout_height="80dp"
                        android:src="@mipmap/icon_002"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        android:layout_width="1dp"
                        android:layout_height="80dp"
                        android:src="@mipmap/icon_005"/>
                    <ImageView
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        android:layout_width="1dp"
                        android:layout_height="80dp"
                        android:src="@mipmap/icon_006"/>
                    <ImageView
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        android:layout_width="1dp"
                        android:layout_height="80dp"
                        android:src="@mipmap/icon_004"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_selected"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:padding="12dp"
                    android:src="@mipmap/icon_redo"
                    android:tint="?attr/colorPrimary" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重置每日任务"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:orientation="horizontal">
                <View
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/hintTextColor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_selected"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:padding="12dp"
                    android:src="@mipmap/icon_choose"
                    android:tint="?attr/colorPrimary" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择题库"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:orientation="horizontal">
                <View
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/hintTextColor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_selected"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:padding="12dp"
                    android:src="@mipmap/icon_datamanage"
                    android:tint="?attr/colorPrimary" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数据管理"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_selected"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:padding="12dp"
                    android:src="@mipmap/icon_setting"
                    android:tint="?attr/colorPrimary" />
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="设置"
                    android:textSize="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:orientation="horizontal">
                <View
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/hintTextColor"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_selected"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:padding="12dp"
                    android:src="@mipmap/icon_update"
                    android:tint="?attr/colorPrimary" />
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="检查更新"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:orientation="horizontal">
                <View
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/hintTextColor"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_selected"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:padding="14dp"
                    android:src="@mipmap/icon_suggest"
                    android:tint="?attr/colorPrimary" />
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="功能建议"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:orientation="horizontal">
                <View
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/hintTextColor"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_selected"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:padding="12dp"
                    android:src="@mipmap/icon_about"
                    android:tint="?attr/colorPrimary" />
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="关于"
                    android:textSize="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_selected"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退出登录"
                    android:textColor="#DC143C"
                    android:gravity="center"
                    android:textSize="18dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>